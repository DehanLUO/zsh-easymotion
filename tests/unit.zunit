# 51
@test 'render_jump_markers: overlapping' {
  function zle() {}

  local BUFFER=""
  local -a region_highlight
  local -a maps=(
    ";a"$'\0'"2"
    ";b"$'\0'"3"
  )
  _zsh_easymotion_render_jump_markers \
    "x//x"                            \
    ""                                \
    ${maps[@]}
  assert "${#region_highlight[@]}" equals 5
  assert "$region_highlight[1]" same_as "0 4 fg=black,bold"
  assert "$region_highlight[2]" same_as "1 2 fg=208,bold"
  assert "$region_highlight[3]" same_as "2 3 fg=94,bold"
  assert "$region_highlight[4]" same_as "2 3 fg=208,bold"
  assert "$region_highlight[5]" same_as "3 4 fg=94,bold"
  assert "$BUFFER" same_as "x;;b"
}

