# 53
@test 'render_jump_markers: respects custom zstyle colors' {
  zstyle ':zsh-easymotion:*' fg-primary 'fg=red,bold'
  zstyle ':zsh-easymotion:*' fg-secondary 'fg=orange,bold'
  zstyle ':zsh-easymotion:*' fg-tertiary 'fg=yellow,bold'
  zstyle ':zsh-easymotion:*' fg-dim 'fg=green,bold'

  function zle() {}

  local -a region_highlight
  local -a map=(
    "a"$'\0'"2"
    ";;"$'\0'"4"
  )
  _zsh_easymotion_render_jump_markers \
    "x/x/x"                           \
    ""                                \
    ${map[@]}
  assert "${#region_highlight[@]}" equals 4
  assert "$region_highlight[1]" same_as "0 5 fg=green,bold"
  assert "$region_highlight[2]" same_as "1 2 fg=red,bold"
  assert "$region_highlight[3]" same_as "3 4 fg=orange,bold"
  assert "$region_highlight[4]" same_as "4 5 fg=yellow,bold"

  zstyle -d ':zsh-easymotion:*' fg-primary
  zstyle -d ':zsh-easymotion:*' fg-secondary
  zstyle -d ':zsh-easymotion:*' fg-tertiary
  zstyle -d ':zsh-easymotion:*' fg-dim
}

